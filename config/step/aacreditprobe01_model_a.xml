<?xml version="1.0" encoding="UTF-8" ?>
<!--信用探针 model_a-->
<step name="model" id="aacreditprobe01_model_a" status="able"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../xsd/step.xsd">
    <relyon>aacreditprobe01_var_a</relyon>
    <period>
        <periodInSecond>5</periodInSecond>
        <mainTable>model_model_aa_ip_creditprobe_mod_multipoint</mainTable>
        <params>
            <param name="gid" value="${req|gid}"/>
        </params>
    </period>
    <handler type="http">
        <serviceCallingManager>
            <serviceCaller method="POST" paramForm="map" url="aacreditprobe01_model_a_url" timeThreshold="50"
                           failurePolicy="attempt">
                <mapper>
                    <mapping source="${unit|mid}" target="mid"/>
                    <mapping source="${unit|id}" target="cmid"/>
                    <mapping source="${req|gid}" target="gid"/>
                    <mapping source="${cxt|aacreditprobe01_var_a}" target="rid"/>
                </mapper>
            </serviceCaller>
            <attemptManager times="3" intervalInMilli="30"></attemptManager>
        </serviceCallingManager>
    </handler>
</step>