<?xml version="1.0" encoding="UTF-8" ?>
<!--信用卡代偿百度黑名单var-->
<step name="var" id="creditcompenstory_personalblacklistc_var" status="able" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../xsd/step.xsd">
    <relyon>personalblacklistc_std</relyon>
    <period>
        <periodInSecond>5</periodInSecond>
        <mainTable>var_var_zz_ccrp_blackthird</mainTable>
        <params>
            <param name="gid" value="${req|gid}"/>
        </params>
    </period>
    <handler type="http">
        <serviceCallingManager>
            <serviceCaller method="POST" paramForm="map" url="personalblacklistccompensatory_var_data_url"
                           timeThreshold="50"
                           failurePolicy="attempt">
                <mapper>
                    <mapping source="${unit|mid}" target="mid"/>
                    <mapping source="${unit|id}" target="cmid"/>
                    <mapping source="${req|gid}" target="gid"/>
                    <mapping source="${cxt|personalblacklistc_std}" target="rid"/>
                </mapper>
            </serviceCaller>
            <attemptManager times="3" intervalInMilli="30"></attemptManager>
        </serviceCallingManager>
    </handler>
</step>


