<?xml version="1.0" encoding="UTF-8" ?>
<!--运营商爬虫var-->
<step name="var" id="userreport_v3_var" status="able"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../xsd/step.xsd">
    <relyon>userreport_v3_tidy</relyon>
    <period>
        <periodInSecond>5</periodInSecond>
        <mainTable>var_operator_czzzp01_operator</mainTable>
        <params>
            <param name="gid" value="${req|gid}"/>
        </params>
    </period>
    <handler type="http">
        <serviceCallingManager>
            <serviceCaller method="POST" paramForm="map" url="userreport_var_data_url" timeThreshold="50"
                           failurePolicy="attempt">
                <mapper>
                    <mapping source="${unit|mid}" target="mid"/>
                    <mapping source="${unit|id}" target="cmid"/>
                    <mapping source="${req|gid}" target="gid"/>
                    <mapping source="${cxt|userreport_v3_tidy}" target="rid"/>
                </mapper>
            </serviceCaller>
            <attemptManager times="3" intervalInMilli="30"></attemptManager>
        </serviceCallingManager>
    </handler>
</step>